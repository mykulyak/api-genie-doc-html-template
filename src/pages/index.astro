  </Tag>
  <Tag name="Favorite">
    <Operation
      id="operation_article_favorite"
      operationId="CreateArticleFavorite"
      method="post"
      path="/articles/{slug}/favorite"
      summary="Favorite an article"
    >
      <Fragment slot="description">
