      title="UpdateArticle"
      url="#resource_update_article"
      slot="resource"
    />
    <ResourceItem
      title="UpdateUser"
      url="#resource_update_user"
      slot="resource"
    />
    <ResourceItem title="User" url="#resource_user" slot="resource" />
