    <Operation
      id="operation_comment_delete"
      operationId="DeleteArticleComment"
      method="delete"
      path="/articles/{slug}/comments/{id}"
      summary="Delete a comment"
    >
      <Fragment slot="description">
        Delete a comment for an article. Auth is required
      </Fragment>
